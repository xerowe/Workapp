<% include ../partials/header %>
  <h1 class="h2 text-center mb-5">
    Create New Product</h1>
  <div class="card col-xl-6 mx-auto ">
    <div class="card-body">
      <form action="/product" method="POST">
        <div class="form-group">
          <label for="name">Enter Product Name</label>
          <input type="text" name="name" class="form-control">
        </div>
        <div class="form-group">
          <label for="campLink">Campaign Link</label>
          <input type="text" name="campLink" class="form-control">
        </div>
        <input type="submit" class="btn btn-raised btn-primary w-100 text-center">
      </form>
    </div>

  </div>
  <% include ../partials/footer %>