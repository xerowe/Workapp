  <div class="row mt-4">
    <div class="col-lg-12">
      <div class="card mb-3">
        <div class="card-header bg-transparent border-light">Recent Task</div>
        <div class="card-body">
          <table class='table borderless table-hover'>
            <thead>
              <tr>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Job For:</th>
                <th scope="col">Posted By:</th>
                <th scope="col">Status</th>
                <th scope="col">Action</th>

              </tr>
            </thead>
            <tbody>
              <tr>
                <% tasks.slice(-5).reverse().forEach(function(task){ %>
                  <td>
                    <%= task.name %>
                  </td>
                  <td>
                    <%= task.desc %>
                  </td>
                  <td>
                    <%= task.jobType %>
                  </td>
                  <td>
                    <%= task.author.username %>
                  </td>
                  <td class="py-3 status">
                    <% if (task.status == 'empty') { %>
                      <h5>
                        <span class="badge badge-pill badge-danger font-weight-normal">Not Started</span>
                      </h5>
                      <% } else if (task.status == 'taken') { %>
                        <span class="badge badge-pill badge-info">In Progress</span>
                        <% } else if (task.status == 'finished') { %>
                          <span class="badge badge-pill badge-success">Complete</span>
                          <% } %>
                  </td>
                  <td class="d-flex py-3">
                    <a href="/task/<%= task._id %>" class="btn-link text-muted">
                      <i class="material-icons">visibility</i>
                    </a>
                    <form class="d-inline" action="/task/<%= task._id %>?_method=DELETE" method="POST">
                      <button class="btn btn-link text-muted p-0">
                        <i class="material-icons">delete</i>
                      </button>
                    </form>
                  </td>
              </tr>
              <% }); %>
            </tbody>

          </table>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-lg-12">


      <table class='table borderless table-hover text-center'>
        <thead class="bg-white text-dark">
          <tr>
            <th scope="col" class="text-left text-info h4">Product</th>
            <th scope="col">Owner</th>
            <th scope="col">Country</th>
            <th scope="col">Proofreading</th>
