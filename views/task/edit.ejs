      <label for="formGroupExampleInput">Example label</label>
      <input type="text" name="task[desc]" class="form-control" id="formGroupExampleInput" value="<%= task.desc %>">
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput">Example label</label>
      <input type="text" name="task[author]" class="form-control" id="formGroupExampleInput" value="<%= task.author %>">
    </div>
